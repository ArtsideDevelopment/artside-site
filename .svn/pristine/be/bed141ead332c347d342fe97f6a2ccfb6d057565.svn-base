.shop{
    @include links(14px, $menu-link-color-hover, $menu-link-color-hover);
    padding-left: 25px;
    #categories{
        margin: $top-bottom-margin 0px;
        ul{
            li{
                width:18%;
                margin: 1%;
                padding: 10px;
                height: 240px;
                float: left;
                text-align: center;
                border: 1px solid $gray-lighten;
                line-height: 16px;
                a.img-block{
                    display: block;
                    width: 100%;
                    height: 150px;
                    line-height: 120px;
                    text-decoration: none;
                    text-align: center;                    
                    img{          
                        width: 100%;
                        display: inline-block;
                        vertical-align: middle;
                    }
                }                
                a{
                    font-size: 13px;
                    font-weight: bold;                   
                }
            }
        }
        &:after{
            content: '';
            display: block;
            clear: both;
        }
    }
    #goods{
        #goods-sorting{
            text-align: right;
            width: 100%;
            border-bottom: 1px solid $gray-lighten;
            padding-bottom: 5px;
            margin-bottom: 20px;
        }
        .product{
            line-height:16px;
            border-bottom: 1px solid $gray-lighten;
            padding:20px 0px;
            .product-img{
                float: left;
                width: 25%;
                img{
                    width: 100%;
                }
            }
            .product-description{
                float: left;
                width: 55%;
                margin: 0 2.5%;
                border-right: 1px solid $gray-lighten;
                padding: 0 2.5%;
                a.product-name{
                    font-size: 20px;
                }
                .product-characteristic{
                    margin: 5px 0px 10px 0px;                    
                }
                .product-manufacturer{
                    color: $text-gray-color;
                    margin: 5px 0px; 
                }
                .product-announcement{
                    color: $text-gray-color;
                    margin: 0px;
                    font-size: ($default-font-size - 2);
                }        
                a.product-link-announcement{
                    font-size: ($default-font-size - 2);
                }
            }
            .product-price{
                font-size: 20px;
                width: 15%;
                float: left;
                div{
                    margin-bottom: 5px;
                }
                .product-old-price{
                    position: relative;
                    color: $text-gray-color;
                    margin-bottom: 5px;
                    display: inline-block;
                    &:after{
                        content: '';
                        position: absolute;
                        width: 100%;
                        top:50%;
                        left: 0;
                        height: 2px;
                        background-color: $text-red-color;                        
                    }
                }
                .product-new-price{
                    color: $text-red-color;
                    margin-bottom: 5px;
                } 
                .product-link{
                    color: $text-blue-color;
                    font-size: $default-font-size - 2;
                    p{
                        display: inline-block;
                        width: 100%;
                    }
                }
                span{
                    font-size: $default-font-size;
                }
                .button, .button-gray{
                    width: 100%;
                    padding: 10px 0px;
                    margin: 10px 0px;
                    border: none;
                }
                .button{
                    font-weight: bold;
                }
                .button-gray{
                    font-size: $default-font-size - 2;
                    line-height: $default-font-size - 2;
                    padding: 6px 0px;
                }
                
            }
            &:after{
                @extend .clear;
            }
        }
        &.product-card{
            h1{
                margin: 20px 0px 10px 0px;
            }
             .product{
                .product-img{
                    float: right;
                    width: 30%;
                }
                .product-description{
                    float: left;
                    margin: 0px;
                    padding: 0px 10px;
                    width: 70%;
                }
                .product-order{
                    margin: 15px 0px;
                    padding: 10px;
                    background-color: $bg-menu-color;
                    .form-group{
                        margin-top: 5px;
                        margin-bottom: 5px; 
                    }  
                    .button, .button-gray{
                        border: none;   
                        margin-left: 5px;
                        margin-right: 5px;
                    }
                }
                .product-price{
                    float: none;
                    clear: both;
                    display: inline-block;
                    margin: 0px 10px 0px 0px; 
                    width: auto;
                }       
                .product-link{
                    a{
                        color: $text-red-color;       
                    }
                    
                }
             }
        }
    }
    #advantages{
        padding-bottom: 20px;
        line-height:16px;
        border-bottom: 1px solid $gray-lighten;
        ul{
            li{
                float: left;
                width: 18%;
                margin: 0 1%;
                text-align: center;
                a{
                    font-size: 12px;
                    display: inline-block;
                }
            }
            &:after{
                @extend .clear;
            }
        }
    }
}

@media screen and (max-width: 767px) {
    .shop{
        width: 100%;
        padding: $mobile-padding;
        #categories{
            ul{
                li{
                    width:31%;                    
                }
            }            
        }
        #goods{
            .product{
                .product-img, .product-description, .product-price{
                    float: none;
                    width: 100%;
                    border: none;
                    margin: 10px 0px;
                    padding: 0px;
                }
                .product-price{
                    .product-old-price, product-new-price{
                        display: inline-block; 
                    }
                    .product-old-price{
                         float: left;
                    }
                    .product-new-price{
                        float: right;
                    }
                    .product-link{
                        font-size: $default-font-size;
                    }
                    &:after{
                        content: '';
                        display: block;
                        clear: both;
                    }
                }
            }
        }
        #goods{
            &.product-card{
                .product{
                    .product-description, .product-img{
                        float: none;
                        width: 100%;
                        border: none;
                        margin: 10px 0px;
                        padding: 0px;
                       
                    }                    
                    .product-order{ 
                        .grid-3, .grid-6{
                            padding: 5px 20px !important;
                        }
                        .product-price{
                            width:100%;                            
                            .product-old-price, product-new-price{
                                display: inline-block; 
                            }
                            .product-old-price{
                                 float: left;
                            }
                            .product-new-price{
                                float: right;
                            }
                            &:after{
                                content: '';
                                display: block;
                                clear: both;
                            }
                        }
                        .button, .button-gray{
                            width: 100%;                       
                        }
                    }
                }
            }
        }
        #advantages{            
            ul{
                li{                    
                    width: 48%; 
                    margin: 1%;
                    padding: 10px 20px;
                    min-height: 130px;
                }                
            }
        }
    }
}
@media screen and (max-width: 567px) {
    .shop{
        #categories{
            ul{
                li{
                    width:48%; 
                    min-height:60px;
                    height:auto;
                    a.img-block{
                        height: auto;
                    }
                    img{
                        display: none !important;
                    }
                }
            }            
        }
    }
}